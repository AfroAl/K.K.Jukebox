<PreferenceScreen xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto">

    <PreferenceCategory app:title="Hourly Radio"
        android:textColor="@color/leafGreen">
        <ListPreference
            android:id="@+id/weather_prefs"
            android:key="weather_prefs"
            app:defaultValue="sun"
            app:entries="@array/weather_vars"
            app:entryValues="@array/weather_vals"
            app:title="Weather"
            android:buttonTint="@color/leafGreen"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:id="@+id/game_prefs"
            android:key="game_prefs"
            app:defaultValue="acnl"
            app:entries="@array/game_vars"
            app:entryValues="@array/game_vals"
            app:title="Game"
            android:buttonTint="@color/leafGreen"
            app:useSimpleSummaryProvider="true" />

        <ListPreference
            android:id="@+id/kk_prefs"
            android:key="kk_prefs"
            app:defaultValue="never"
            app:entries="@array/kk_vars"
            app:entryValues="@array/kk_vals"
            app:title="K.K. Slider"
            android:buttonTint="@color/leafGreen"
            app:useSimpleSummaryProvider="true" />
    </PreferenceCategory>

</PreferenceScreen>
